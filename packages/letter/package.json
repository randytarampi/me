{
  "name": "@randy.tarampi/letter",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Randy Tarampi",
    "email": "rt@randytarampi.ca",
    "url": "https://www.randytarampi.ca"
  },
  "version": "0.42.1",
  "description": "A cover letter generator for www.randytarampi.ca",
  "bugs": {
    "url": "https://github.com/randytarampi/me/issues",
    "email": "bugs@randytarampi.ca"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/randytarampi/me.git"
  },
  "license": "MIT",
  "keywords": [
    "cover letter",
    "@randy.tarampi/letter",
    "print",
    "job applications",
    "jobs",
    "work",
    "employment",
    "documents",
    "letters"
  ],
  "scripts": {
    "pretest": "gulp -LLLL --color lint",
    "test": "NODE_ENV=test gulp -LLLL --color test",
    "start": "npm run dev",
    "dev": "npm run dev:client",
    "dev:client": "rm -rf dist/*.js dist/*.css && webpack-serve ./webpack.client.config.js --hotClient",
    "build": "npm run build:gulp && npm run build:babel",
    "build:gulp": "gulp -LLLL --color build",
    "build:babel": "BABEL_ENV=publish babel src --out-dir build --root-mode upward --copy-files",
    "prepare": "if [ -z \"$CI\" ]; then npm run build; fi;",
    "prepack": "NODE_ENV=prd npm run build",
    "start:server": "npm run kill:server; node ./server.js & echo $! > /tmp/ca.randytarampi.me.letter.server.pid; echo \"Started server (`cat /tmp/ca.randytarampi.me.letter.server.pid`) from /tmp/ca.randytarampi.me.letter.server.pid\";",
    "kill:server": "if [ -f /tmp/ca.randytarampi.me.letter.server.pid ]; then echo \"Killing server (`cat /tmp/ca.randytarampi.me.letter.server.pid`) from /tmp/ca.randytarampi.me.letter.server.pid\"; kill -9 `cat /tmp/ca.randytarampi.me.letter.server.pid`; rm /tmp/ca.randytarampi.me.letter.server.pid; fi;",
    "letter": "NODE_ENV=puppeteer CAMPAIGN_SOURCE=letter CAMPAIGN_CONTENT=$(node -p \"require(\\\"./package.json\\\").version\") gulp -LLLL --color letter",
    "docs": "gulp -LLLL --color docs",
    "cover": "rm -rf coverage/ .nyc_output/; NODE_ENV=test nyc gulp -LLLL --color test",
    "clean": "gulp -LLLL --color clean",
    "preuninstall": "npm run clean"
  },
  "dependencies": {
    "@randy.tarampi/assets": "^0.42.1",
    "@randy.tarampi/css": "^0.42.1",
    "@randy.tarampi/js": "^0.42.1",
    "@randy.tarampi/jsx": "^0.42.1",
    "@randy.tarampi/printables": "^0.42.1",
    "@randy.tarampi/schema-dot-org-json-ld-components": "latest",
    "@randy.tarampi/views": "^0.42.1",
    "exiftool-vendored": "^6.2.3",
    "history": "^4.7.2",
    "immutable": "^4.0.0-rc.9",
    "isomorphic-fetch": "^2.2.1",
    "luxon": "^1.3.3",
    "materialize-css": "^0.100.2",
    "prop-types": "^15.6.2",
    "pug": "^2.0.3",
    "puppeteer": "^1.8.0",
    "query-string": "^6.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.3.3",
    "react-materialize": "^2.4.5",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "redux-immutable": "^4.0.0",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "gulp": "^4.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "webpack": "^4.16.0",
    "webpack-bundle-analyzer": "^3.0.0",
    "webpack-serve": "^2.0.2"
  },
  "engines": {
    "node": ">=8"
  },
  "main": "./index.server.js",
  "browser": "./index.client.js",
  "directories": {
    "lib": "./lib",
    "test": "./test"
  },
  "files": [
    "build",
    "styles",
    "dist/styles.css",
    "index.client.js",
    "index.server.js",
    "letter.json"
  ]
}
