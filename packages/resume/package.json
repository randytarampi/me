  "scripts": {
    "pretest": "npx gulp -LLLL --color lint",
    "test": "NODE_ENV=test npx gulp -LLLL --color test",
    "postinstall": "npm run build",
    "start": "npm run dev",
    "dev": "npm run dev:client",
    "dev:client": "rm -rf dist/*.js && npx webpack-serve --hotClient",
    "build": "npx gulp -LLLL --color build && npm run resume",
    "resume": "npm run resume:pdf && npm run resume:html",
    "resume:pdf": "npm run resume:letter & npm run resume:a4 & npm run resume:legal",
    "resume:letter": "RESUME_PDF_SIZE=Letter npx resume export dist/letter.pdf -f pdf --theme randytarampi",
    "resume:a4": "RESUME_PDF_SIZE=A4 npx resume export dist/a4.pdf -f pdf --theme randytarampi",
    "resume:legal": "RESUME_PDF_SIZE=Legal npx resume export dist/legal.pdf -f pdf --theme randytarampi",
    "resume:html": "npx resume export dist/index.html -f html --theme randytarampi",
    "docs": "npx gulp -LLLL --color docs",
    "cover": "rm -rf coverage/ .nyc_output/; NODE_ENV=test npx nyc npx gulp -LLLL --color test"
  },
  "license": "MIT",
