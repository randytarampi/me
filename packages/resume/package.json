  "homepage": "https://www.randytarampi.ca/resume",
  "keywords": [
    "curriculum",
    "curriculum vitae",
    "cv",
    "documents",
    "employment",
    "job applications",
    "jobs",
    "json resume",
    "jsonresume",
    "jsonresume theme",
    "jsonresume-theme",
