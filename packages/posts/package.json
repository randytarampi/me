{
  "name": "@randy.tarampi/posts",
  "author": {
    "name": "Randy Tarampi",
    "email": "rt@randytarampi.ca",
    "url": "https://www.randytarampi.ca"
  },
  "version": "0.18.0",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "postinstall": "npx sls dynamodb install",
    "preuninstall": "npx sls dynamodb remove",
    "pretest": "npx gulp -LLLL --color lint",
    "pretest:dynamodb-local": "npm run kill:dynamodb-local; npm run start:dynamodb-local; echo \"Started dynamodb-local (`cat /tmp/ca.randytarampi.me.posts.dynamo.pid`) from /tmp/ca.randytarampi.me.posts.dynamo.pid\";",
    "test": "npm run pretest:dynamodb-local; npm run test:actual",
    "test:actual": "NODE_ENV=test npx gulp -LLLL --color test",
    "kill": "npm run kill:dynamodb-local",
    "kill:dynamodb-local": "if [ -f /tmp/ca.randytarampi.me.posts.dynamo.pid ]; then echo \"Killing dynamodb-local (`cat /tmp/ca.randytarampi.me.posts.dynamo.pid`) from /tmp/ca.randytarampi.me.posts.dynamo.pid\"; kill -9 `cat /tmp/ca.randytarampi.me.posts.dynamo.pid`; rm /tmp/ca.randytarampi.me.posts.dynamo.pid; fi;",
    "posttest": "npm run kill",
    "cover": "rm -rf coverage/ .nyc_output/; npm run pretest:dynamodb-local; NODE_ENV=test npx nyc gulp -LLLL --color test; npm run kill:dynamodb-local",
    "prestart": "npm run kill",
    "start": "npm run dev",
    "start:dynamodb-local": "java -Djava.library.path=./node_modules/dynamodb-localhost/dynamodb/bin/DynamoDBLocal_lib -jar ./node_modules/dynamodb-localhost/dynamodb/bin/DynamoDBLocal.jar -inMemory & echo $! > /tmp/ca.randytarampi.me.posts.dynamo.pid",
    "dev": "npm run dev:serverless",
    "dev:serverless": "npx sls offline start --stage local",
    "deploy": "if [ -z \"$NODE_ENV\" ]; then NODE_ENV=dev npm run deploy; else npm run deploy:$NODE_ENV; fi; ",
    "deploy:dev": "npx sls create_domain --stage $NODE_ENV --region us-east-1 && sls deploy --conceal --stage $NODE_ENV --region us-east-1",
    "deploy:prd": "npx sls create_domain --stage $NODE_ENV --region ca-central-1 && sls deploy --conceal --stage $NODE_ENV --region ca-central-1"
  },
  "description": "A backend to @randy.tarampi/www",
  "bugs": {
    "url": "https://github.com/randytarampi/me/issues",
    "email": "bugs@randytarampi.ca"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/randytarampi/me.git"
  },
  "dependencies": {
    "@randy.tarampi/js": "^0.18.0",
    "aws-sdk": "^2.279.1",
    "dynamoose": "^0.8.7",
    "flickr-sdk": "^3.7.0",
    "form-data": "^2.3.2",
    "immutable": "^4.0.0-rc.9",
    "instagram-api": "^1.0.3",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.10",
    "luxon": "^1.3.3",
    "lwip": "github:kant2002/lwip#node-10",
    "raven": "^2.6.3",
    "redux": "^4.0.0",
    "tumblr.js": "^2.0.0",
    "unsplash-js": "^4.8.0"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/plugin-proposal-object-rest-spread": "latest",
    "@babel/polyfill": "latest",
    "@babel/preset-env": "latest",
    "@babel/register": "latest",
    "babel-loader": "next",
    "babel-plugin-istanbul": "next",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-minify-replace": "^0.4.3",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^4.5.2",
    "eslint-plugin-import": "^2.13.0",
    "gulp": "^4.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-if": "^2.0.2",
    "gulp-mocha": "^6.0.0",
    "habitat": "^3.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "proxyquire": "^2.1.0",
    "serverless": "^1.28.0",
    "serverless-domain-manager": "^2.6.0",
    "serverless-dynamodb-local": "0.2.32",
    "serverless-mocha-plugin": "^1.8.3",
    "serverless-offline": "^3.25.6",
    "serverless-plugin-warmup": "^3.6.2-rc.1",
    "serverless-secrets": "^3.0.0-beta.12",
    "serverless-webpack": "^5.2.0",
    "sinon": "^6.1.4",
    "vinyl-paths": "^2.1.0",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8",
    "webpack-node-externals": "^1.7.2",
    "webpack-sentry-plugin": "^1.16.0"
  },
  "engines": {
    "node": ">=8"
  }
}
